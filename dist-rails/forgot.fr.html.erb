<!DOCTYPE html>
<html>
  <head profile="http://www.w3.org/2005/10/profile">
  
  <%= stylesheet_link_tag "portal" %>

  <link rel="icon" 
    type="image/png" 
    href="/assets/favicon.png" />

    <title>Mot de passe oublié - Draft</title>
    <meta name="viewport" content="width=device-width;user-scalable=no,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0">
    <meta name="robots" content="noindex,nofollow" />
  </head>

  <body class="page-forgot has-header<% if @desktop %> is-desktop<% end %>">

    <div id="top-of-site-pixel-anchor"></div>

<header class="main-header">
	<input type="checkbox" id="btnBurgerMenu" name="burger-menu-visibility">
	<label for="btnBurgerMenu" class="burger-btn">
		<span class="wrapper">
			<span class="deco-btn-burger"></span>
			<span class="deco-btn-burger"></span>
			<span class="deco-btn-burger"></span>
		</span>
	</label>
	<nav class="nav">
		<a class="logo text-link" href="/fr/"><img src="<%= image_path("site/logo-diag-orange-plus-text.png") %>" alt="Logo Draft"></a>
		<ul>
			<li>
				<div class="toggle-wrapper text-link">
					<div class="toggle">Workflows <i class="fas fa-chevron-down"></i></div>
					<ul class="menu">
						<li><a class="text-link" href="/fr/agile-project-management">Gestion de projet Agile</a></li>
						<li><a class="text-link" href="/fr/product-management">Product Management</a></li>
						<li><a class="text-link" href="/fr/everyday-creative-work">Travail créatif quotidien</a></li>
					</ul>
				</div>
			</li>
			<li><a class="text-link" href="/fr/enterprise">Entreprise</a></li>
			<li><a class="text-link" href="/fr/customer-stories/sncf-transforming-customer-experience-with-user-story-mapping">Customer stories</a></li>
			<li><a class="text-link" href="/fr/examples">Exemples</a></li>
			<li><a class="text-link" href="/fr/pricing">Offres</a></li>
			<li class="login"><a class="text-link" href="/fr/login">Se connecter</a></li>
			<li class="signup"><a class="cta" href="/fr/get-started">S'inscrire</a></li>
		</ul>

		<!-- <a class="fav" href="/">d</a> -->
		<!-- <a class="fav-sheet" href="/">d</a> -->
	</ul>
</header>

<script>
	document.ontouchstart = function (e) {
		e.stopPropagation();
	}
</script>

    <div class="bloc-form">
      <div class="title">Demande de réinitialisation</div>

      <form action="forgot" method="POST">
        
        <% if @user_not_found %><div class="error">There is no account associated with this address.</div><% end %>
        <input name="email" class="field field-email" placeHolder="Email"<% if @email %> value=""<% end %> />
        

        

        <input class="send-button" type="submit" value="Envoyer le lien de réinitialisation" />
      </form>
    </div>

    
    <% if @desktop %>
      <a class="back-to-login" href="/login">> back to login</a>
    <% end %>

    <script>
      window.serverData = {};

      <% if @errors %>
        window.serverData.errors = <%= raw @errors.to_json %>
      <% end %>

      window.onload = function() {
        setTimeout(function() {
          document.getElementsByClassName('field-email')[0].focus();
        }, 0);
      };
    </script>
    
  </body>
</html>